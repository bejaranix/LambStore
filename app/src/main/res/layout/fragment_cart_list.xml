<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        tools:context="com.example.usuario.lambstore.fragments.CartListFragment"
        android:id="@+id/rvCartList"
    />
    <TextView
        android:id="@+id/parcialTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/testText"
        android:textSize="@dimen/title_text_size"
        android:layout_weight=".5"
        android:padding="@dimen/standard_padding"
        />
    <RelativeLayout
        android:id="@+id/endBuyingBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/bottom_button_color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_buying"
            android:textSize="@dimen/title_text_size"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</LinearLayout>


